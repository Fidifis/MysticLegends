<Window x:Class="MysticLegendsClient.CharacterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MysticLegendsClient"
        xmlns:controls="clr-namespace:MysticLegendsClient.Controls"
        mc:Ignorable="d"
        Title="CharacterWindow"
        Height="800" Width="800"
        MinWidth="700" MinHeight="500"
        Loaded="Window_Loaded" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <controls:CharacterView x:Name="characterView" Grid.Row="0"/>
        <controls:InventoryView x:Name="inventoryView" Grid.Row="1"/>
    </Grid>
</Window>
