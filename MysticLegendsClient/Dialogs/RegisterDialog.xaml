<Window x:Class="MysticLegendsClient.Dialogs.RegisterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MysticLegendsClient.Dialogs"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Register" Height="300" Width="300">
    <StackPanel>
        <Label Content="Username" Margin="20 0"/>
        <TextBox x:Name="usernameBox" Height="25" Margin="20 0 20 20"/>
        <Label Content="Password" Margin="20 0"/>
        <PasswordBox x:Name="passwordBox" Height="25" Margin="20 0 20 20"/>
        <Label Content="Confirm Password" Margin="20 0"/>
        <PasswordBox x:Name="confirmPasswordBox" Height="25" Margin="20 0 20 20"/>
        <Button Content="Register" Height="30" Margin="20 0" Click="Button_Click"/>
    </StackPanel>
</Window>
