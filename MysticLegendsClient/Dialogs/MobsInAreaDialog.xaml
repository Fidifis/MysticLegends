<Window x:Class="MysticLegendsClient.Dialogs.MobsInAreaDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MysticLegendsClient.Dialogs"
        mc:Ignorable="d"
        Title="MobsInArea"
        MinHeight="300" MinWidth="200"
        Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Mobs:" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <ListView x:Name="mobList" Grid.Column="0" SelectionChanged="mobList_SelectionChanged" Margin="0 30 0 0"/>
        
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" MaxHeight="500"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Label Content="Mob level:" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <ListView x:Name="levelList" Grid.Row="0" Margin="0 30 0 0"/>

            <Button Content="Fight" Width="70" Height="25" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="20" Click="Button_Click"/>
        </Grid>
    </Grid>
</Window>
