<Window x:Class="MysticLegendsClient.CharacterSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MysticLegendsClient"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="CharacterSelect" Height="600" Width="1000"
        MinHeight="100" MinWidth="200">
    <Grid>
        <Label Name="heading" Margin="20 10" FontSize="25" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <StackPanel x:Name="slotsPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10, 50"/>
        </ScrollViewer>
        <Button Content="Create new" x:Name="createBtn" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,30,20" Height="30" Width="75" Click="Create_Click"/>
        <Button Content="Back" x:Name="backBtn" Visibility="Hidden" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,30,20" Height="30" Width="75" Click="Back_Click"/>
    </Grid>
</Window>
